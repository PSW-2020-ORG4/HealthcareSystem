                                                        </DataGridTextColumn.ElementStyle>
                                                    </DataGridTextColumn>

                                                    <DataGridTextColumn
                                                        Width="*"
                                                        Binding="{Binding DateTimeTo, StringFormat='{}{0:dd/MM/yy}  {0:HH:mm}'}"
                                                        Header="Pomereni">

                                                        <DataGridTextColumn.ElementStyle>
                                                            <Style TargetType="TextBlock">
                                                                <Setter Property="TextWrapping" Value="Wrap" />
                                                                <Setter Property="TextAlignment" Value="Center" />
                                                            </Style>
                                                        </DataGridTextColumn.ElementStyle>
                                                    </DataGridTextColumn>


                                                    <DataGridTextColumn
                                                        Width="*"
                                                        Binding="{Binding RoomId}"
                                                        Header="Id objekta" />

                                                    <DataGridTemplateColumn Width="Auto">
                                                        <DataGridTemplateColumn.CellTemplate>
                                                            <DataTemplate>
                                                                <Button
                                                                    x:Name="ShowEmergencyAppointmentSearchResultObjectOnMapButton"
                                                                    Padding="3,0"
                                                                    HorizontalContentAlignment="Stretch"
                                                                    Background="MediumPurple"
                                                                    BorderBrush="{x:Null}"
                                                                    Click="ShowMedicineSearchResultObjectOnMapButton_Click"
                                                                    Style="{StaticResource DataGridButtonVisibleOnRowHover}">
                                                                    <StackPanel
                                                                        HorizontalAlignment="Center"
                                                                        VerticalAlignment="Center"
                                                                        Orientation="Horizontal">
                                                                        <materialDesign:PackIcon
                                                                            Width="25"
                                                                            Height="25"
                                                                            HorizontalAlignment="Center"
                                                                            VerticalAlignment="Center"
                                                                            Foreground="White"
                                                                            Kind="Location" />
                                                                    </StackPanel>
                                                                    <Button.ToolTip>
                                                                        <ToolTip>
                                                                            Prikaži objekat na mapi
                                                                        </ToolTip>
                                                                    </Button.ToolTip>
                                                                </Button>
                                                            </DataTemplate>
                                                        </DataGridTemplateColumn.CellTemplate>
                                                    </DataGridTemplateColumn>
                                                </DataGrid.Columns>
                                            </DataGrid>

                                            <!--  SCHEDULE EMERGENCY APPOINTMENT BUTTON  -->
                                            <Button
                                                x:Name="ScheduleEmergencyAppointmentButton"
                                                Grid.Row="22"
                                                Grid.ColumnSpan="2"
                                                Height="Auto"
                                                Margin="0,30,10,0"
                                                Padding="5"
                                                Background="#7D80DA"
                                                BorderBrush="{x:Null}"
                                                Click="ScheduleEmergencyAppointmentButton_Click"
                                                FontSize="18"
                                                ToolTip="Pomeri izabrani pregled i zakaži hitan pregled u njegovom terminu">

                                                <Button.Style>
                                                    <Style BasedOn="{StaticResource MaterialDesignRaisedButton}" TargetType="Button">
                                                        <Setter Property="Control.Visibility" Value="Collapsed" />
                                                        <Style.Triggers>
                                                            <MultiDataTrigger>
                                                                <MultiDataTrigger.Conditions>
                                                                    <Condition Binding="{Binding ElementName=IsEmergencyAppointmentCheckBox, Path=IsChecked}" Value="true" />
                                                                    <Condition Binding="{Binding ElementName=EmergencyAppointmentSearchResultsDataGrid, Path=SelectedItem, Converter={StaticResource SelectedItemToVisibilityConverter}}" Value="Visible" />
                                                                </MultiDataTrigger.Conditions>

                                                                <Setter Property="Control.Visibility" Value="Visible" />
                                                            </MultiDataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Button.Style>

                                                <StackPanel
                                                    HorizontalAlignment="Center"
                                                    VerticalAlignment="Center"
                                                    Orientation="Horizontal">
                                                    <materialDesign:PackIcon
                                                        Width="25"
                                                        Height="25"
                                                        HorizontalAlignment="Left"
                                                        VerticalAlignment="Center"
                                                        Foreground="White"
                                                        Kind="MarkerTick" />
                                                    <TextBlock
                                                        Margin="5"
                                                        HorizontalAlignment="Right"
                                                        VerticalAlignment="Center"
                                                        Foreground="White"
                                                        Text="Zakaži hitan pregled"
                                                        TextWrapping="Wrap" />
                                                </StackPanel>
                                            </Button>


                                            <!--  Selected Appointment Room  -->
                                            <TextBlock
                                                Grid.Row="20"
                                                Grid.ColumnSpan="2"
                                                Margin="0,20,0,0"
                                                HorizontalAlignment="Left"
                                                VerticalAlignment="Bottom"
                                                FontSize="16"
                                                Foreground="Black"
                                                Text="Soba za izabrani termin:">

                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="Control.Visibility" Value="Collapsed" />
                                                        <Style.Triggers>
                                                            <MultiDataTrigger>
                                                                <MultiDataTrigger.Conditions>
                                                                    <Condition Binding="{Binding ElementName=IsEmergencyAppointmentCheckBox, Path=IsChecked}" Value="false" />
                                                                    <Condition Binding="{Binding ElementName=AppointmentSearchResultsDataGrid, Path=SelectedItem, Converter={StaticResource SelectedItemToVisibilityConverter}}" Value="Visible" />
                                                                </MultiDataTrigger.Conditions>

                                                                <Setter Property="Control.Visibility" Value="Visible" />
                                                            </MultiDataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>

                                            <ComboBox
                                                Name="SelectedAppointmentRoomComboBox"
                                                Grid.Row="21"
                                                Grid.ColumnSpan="2"
                                                Margin="0,0,10,0"
                                                VerticalAlignment="Top"
                                                materialDesign:HintAssist.Hint="Izaberite sobu za obavljanje pregleda."
                                                BorderBrush="MediumPurple"
                                                FontSize="16"
                                                IsTextSearchEnabled="True"
                                                SelectionChanged="SelectedAppointmentRoomComboBox_SelectionChanged">

                                                <ComboBox.Style>
                                                    <Style BasedOn="{StaticResource MaterialDesignComboBox}" TargetType="ComboBox">
                                                        <Setter Property="Control.Visibility" Value="Collapsed" />
                                                        <Style.Triggers>
                                                            <MultiDataTrigger>
                                                                <MultiDataTrigger.Conditions>
                                                                    <Condition Binding="{Binding ElementName=IsEmergencyAppointmentCheckBox, Path=IsChecked}" Value="false" />
                                                                    <Condition Binding="{Binding ElementName=AppointmentSearchResultsDataGrid, Path=SelectedItem, Converter={StaticResource SelectedItemToVisibilityConverter}}" Value="Visible" />
                                                                </MultiDataTrigger.Conditions>

                                                                <Setter Property="Control.Visibility" Value="Visible" />
                                                            </MultiDataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </ComboBox.Style>
                                            </ComboBox>


                                            <!--  SCHEDULE APPOINTMENT BUTTON  -->
                                            <Button
                                                x:Name="ScheduleAppointmentButton"
                                                Grid.Row="22"
                                                Grid.ColumnSpan="2"
                                                Height="Auto"
                                                Margin="0,30,10,0"
                                                Padding="5"
                                                Background="#7D80DA"
                                                BorderBrush="{x:Null}"
                                                Click="ScheduleAppointmentButton_Click"
                                                FontSize="18"
                                                ToolTip="Zakaži pregled u izabranom terminu">

                                                <Button.Style>
                                                    <Style BasedOn="{StaticResource MaterialDesignRaisedButton}" TargetType="Button">
                                                        <Setter Property="Control.Visibility" Value="Collapsed" />
                                                        <Style.Triggers>
                                                            <MultiDataTrigger>
                                                                <MultiDataTrigger.Conditions>
                                                                    <Condition Binding="{Binding ElementName=IsEmergencyAppointmentCheckBox, Path=IsChecked}" Value="false" />
                                                                    <Condition Binding="{Binding ElementName=SelectedAppointmentRoomComboBox, Path=SelectedItem, Converter={StaticResource SelectedItemToVisibilityConverter}}" Value="Visible" />
                                                                </MultiDataTrigger.Conditions>

                                                                <Setter Property="Control.Visibility" Value="Visible" />
                                                            </MultiDataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Button.Style>

                                                <StackPanel
                                                    HorizontalAlignment="Center"
                                                    VerticalAlignment="Center"
                                                    Orientation="Horizontal">
                                                    <materialDesign:PackIcon
                                                        Width="25"
                                                        Height="25"
                                                        HorizontalAlignment="Left"
                                                        VerticalAlignment="Center"
                                                        Foreground="White"
                                                        Kind="MarkerTick" />
                                                    <TextBlock
                                                        Margin="5"
                                                        HorizontalAlignment="Right"
                                                        VerticalAlignment="Center"
                                                        Foreground="White"
                                                        Text="Zakaži pregled" />
                                                </StackPanel>
                                            </Button>


                                            <!--  APPOINTMENT SECTION BACK TO TOP BUTTON  -->
                                            <Button
                                                x:Name="AppointmentSectionBackToTopButton"
                                                Grid.Row="24"
                                                Grid.ColumnSpan="2"
                                                Height="Auto"
                                                Margin="0,30,10,0"
                                                Padding="5"
                                                BorderBrush="{x:Null}"
                                                Click="AppointmentSectionBackToTopButton_Click"
                                                FontSize="18"
                                                Style="{StaticResource MaterialDesignFlatButton}">
                                                <StackPanel
                                                    HorizontalAlignment="Center"
                                                    VerticalAlignment="Center"
                                                    Orientation="Horizontal">
                                                    <materialDesign:PackIcon
                                                        Width="25"
                                                        Height="25"
                                                        HorizontalAlignment="Left"
                                                        VerticalAlignment="Center"
                                                        Foreground="MediumPurple"
                                                        Kind="ArrowTop" />
                                                    <TextBlock
                                                        Margin="5"
                                                        HorizontalAlignment="Right"
                                                        VerticalAlignment="Center"
                                                        Foreground="MediumPurple"
                                                        Text="Povratak na parametre pretrage" />
                                                </StackPanel>
                                            </Button>
                                        </Grid>
                                    </ScrollViewer>
                                </Grid>
                            </Grid>
                        </materialDesign:TransitioningContent>




                        <!--  OBJECT INFO EDITING INPUT PANEL  -->
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*" />
                                <RowDefinition Height="10*" />
                            </Grid.RowDefinitions>

                            <StackPanel
                                x:Name="EditPanel"
                                Grid.Row="1"
                                Style="{StaticResource EditingMode}">

                                <TextBlock
                                    Grid.Row="0"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Center"
                                    FontSize="26"
                                    Text="Izmena objekta: "
                                    TextWrapping="Wrap" />
                                <ComboBox
                                    Name="ObjectTypeChooserComboBox"
                                    Margin="0,30,0,0"
                                    materialDesign:HintAssist.Hint="Izaberite tip objekta."
                                    FontSize="16"
                                    ItemsSource="{Binding DisplayMapObject.MapObjectType.AllMapObjectTypesAvailableToChange}">
                                    <ComboBox.ItemTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding Path=ObjectTypeFullName}" />
                                        </DataTemplate>
                                    </ComboBox.ItemTemplate>
                                </ComboBox>

                                <TextBox
                                    Margin="0,5,0,0"
                                    HorizontalAlignment="Center"
                                    FontSize="20"
                                    IsReadOnly="True"
                                    Text="{Binding DisplayMapObject.Id}" />

                                <TextBox
                                    Margin="0,10,0,0"
                                    materialDesign:HintAssist.Hint="Unesite deskripciju objekta."
                                    FontSize="16"
                                    Text="{Binding DisplayMapObject.Description}"
                                    TextWrapping="Wrap" />

                                <Button
                                    x:Name="SaveButton"
                                    Height="Auto"
                                    Margin="0,15,0,0"
                                    Padding="5"
                                    Background="#7D80DA"
                                    BorderBrush="{x:Null}"
                                    Click="Change_Display_Information"
                                    FontSize="18">
                                    <StackPanel
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Orientation="Horizontal">
                                        <materialDesign:PackIcon
                                            Width="25"
                                            Height="25"
                                            HorizontalAlignment="Left"
                                            VerticalAlignment="Center"
                                            Foreground="White"
                                            Kind="ContentSave" />
                                        <TextBlock
                                            Margin="5"
                                            HorizontalAlignment="Right"
                                            VerticalAlignment="Center"
                                            Foreground="White"
                                            Text="Sačuvaj" />
                                    </StackPanel>
                                </Button>

                                <Button
                                    Height="Auto"
                                    Margin="0,10,0,0"
                                    Padding="5"
                                    Background="#F2404C"
                                    BorderBrush="{x:Null}"
                                    Click="Cancel_Editing_Mode"
                                    FontSize="18">
                                    <StackPanel
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Orientation="Horizontal">
                                        <materialDesign:PackIcon
                                            Width="25"
                                            Height="25"
                                            HorizontalAlignment="Left"
                                            VerticalAlignment="Center"
                                            Foreground="White"
                                            Kind="CloseBox" />
                                        <TextBlock
                                            Margin="5"
                                            HorizontalAlignment="Right"
                                            VerticalAlignment="Center"
                                            Foreground="White"
                                            Text="Otkaži   " />
                                    </StackPanel>
                                </Button>
                            </StackPanel>
                        </Grid>
                    </Grid>

                </Grid>
            </Grid>
        </Border>
    </DockPanel>
</Window>